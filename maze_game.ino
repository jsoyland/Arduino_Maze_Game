void drawMaze(){
  uint16_t x, y;
  bool wall;
  
  for(x=0;x<MAZEWIDTH;x++){
    for(y=0;y<MAZEHEIGHT;y++){
      wall=readPixel(x,y);
      if (wall){
        tft.fillRect((x*PIXELSIZE), (y*PIXELSIZE), PIXELSIZE, PIXELSIZE, ILI9341_YELLOW);
      }
    }
  }

}

